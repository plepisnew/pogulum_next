{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Develop",
      "type": "process",
      "command": "bun",
      "args": [
        "run",
        "dev"
      ],
      "icon": {
        "color": "terminal.ansiGreen",
        "id": "debug"
      }
    },
    {
      "label": "Build",
      "type": "process",
      "command": "bun",
      "args": [
        "run",
        "build"
      ],
      "icon": {
        "color": "terminal.ansiYellow",
        "id": "tools"
      }
    },
    {
      "label": "Validate translations",
      "type": "process",
      "command": "bun",
      "args": [
        "run",
        "./src/i18n/validate.ts"
      ],
      "icon": {
        "color": "terminal.ansiWhite",
        "id": "globe"
      }
    },
    {
      "label": "Start server",
      "type": "process",
      "command": "bun",
      "args": [
        "run",
        "start"
      ],
      "icon": {
        "color": "terminal.ansiCyan",
        "id": "server"
      }
    },
    {
      "label": "Start Prisma Studio",
      "type": "process",
      "command": "bunx",
      "args": [
        "prisma",
        "studio",
        "--schema",
        "./src/prisma/schema.prisma"
      ],
      "icon": {
        "color": "terminal.ansiWhite",
        "id": "database"
      }
    },
    {
      "label": "Apply Prisma schema changes",
      "type": "process",
      "command": "bunx",
      "args": [
        "prisma",
        "db",
        "push",
        "--schema",
        "./src/prisma/schema.prisma"
      ],
      "icon": {
        "color": "terminal.ansiWhite",
        "id": "database"
      }
    }
  ]
}