{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Develop",
      "type": "process",
      "command": "bun",
      "args": [
        "run",
        "dev"
      ],
      "icon": {
        "color": "terminal.ansiGreen",
        "id": "debug"
      }
    },
    {
      "label": "Build",
      "type": "process",
      "command": "bun",
      "args": [
        "run",
        "build"
      ],
      "icon": {
        "color": "terminal.ansiYellow",
        "id": "tools"
      }
    },
    {
      "label": "Validate translations",
      "type": "process",
      "command": "bun",
      "args": [
        "i18n:verify"
      ],
      "icon": {
        "color": "terminal.ansiWhite",
        "id": "globe"
      }
    },
    {
      "label": "Start server",
      "type": "process",
      "command": "bun",
      "args": [
        "run",
        "start"
      ],
      "icon": {
        "color": "terminal.ansiGreen",
        "id": "server"
      }
    },
    {
      "label": "Generate Prisma client",
      "type": "process",
      "command": "bun",
      "args": [
        "prisma:generate",
      ],
      "icon": {
        "color": "terminal.ansiRed",
        "id": "database"
      }
    },
    {
      "label": "Start Prisma Studio",
      "type": "process",
      "command": "bun",
      "args": [
        "prisma:studio",
      ],
      "icon": {
        "color": "terminal.ansiRed",
        "id": "database"
      }
    },
    {
      "label": "Apply Prisma schema changes",
      "type": "process",
      "command": "bun",
      "args": [
        "prisma:push",
      ],
      "icon": {
        "color": "terminal.ansiRed",
        "id": "database"
      }
    }
  ]
}